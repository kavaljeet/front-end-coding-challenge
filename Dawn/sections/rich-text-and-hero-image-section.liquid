
<div class="rich-text-and-hero-image-section">
  <div class="page-width">
    <h2 class="main-heading">{{ section.settings.main_heading }}</h2>
  <div class="sub-heading">{{ section.settings.sub_heading }}</div>

  <div class="rich-text-and-hero-image-blocks-wrapper">
    {% for block in section.blocks %}
      <div class="rich-text-and-hero-image-block">
        {% if block.settings.block_image %}
          <img src="{{ block.settings.block_image | img_url: '156x174' }}" alt="{{ block.settings.block_text }}" class="block-image">
        {% endif %}
        <p class="rich-text-and-hero-image-block-text">{{ block.settings.block_text }}</p>
      </div>
    {% endfor %}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "Heading with Image Blocks",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Our Services"
    },
    {
      "type": "textarea",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "We provide the best solutions for your needs."
    }
  ],
  "blocks": [
    {
      "type": "image_text_block",
      "name": "Image and Text Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Block Image"
        },
        {
          "type": "text",
          "id": "block_text",
          "label": "Block Text",
          "default": "This is an image with text description."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Heading with Blocks",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}